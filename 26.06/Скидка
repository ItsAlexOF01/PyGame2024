n=int(input())
if (n>500 and n<=999):
    print('Вам скидка 100 рублей!')
elif(n>=1000 and n<=2999):
    print('Вам скидка 200 рублей!')
elif(n>=3000 and n<=4999):
    print('Вам скидка 500 рублей!')
elif(n>=5000):
    print('Вы получаете торт в подарок!')
elif(n<500):
    print('Вы ничего не получаете в подарок.')
    

